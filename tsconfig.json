{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "uci-console": [
        "dist/uci-console"
      ],
      "uci-console/*": [
        "dist/uci-console/*"
      ]
    },
    "useDefineForClassFields": false
  }
}